{
  "uid": "purelyworks_oauth_app",
  "type": "app",
  "config": {
    "name": "Purely Works Website HubSpot Integration",
    "description": "OAuth app to connect the Purely Works website forms with HubSpot contacts.",
    "distribution": "private",
    "auth": {
      "type": "oauth",
      "redirectUrls": [
        "http://localhost:3000/api/hubspot/callback",
        "https://purelyworks-site.vercel.app/api/hubspot/callback",
        "https://ixnmnmqyewrrvlscmulw.supabase.co/functions/v1/crm_oauth_callback",
        "http://localhost:4001/integrations/hubspot/oauth/callback"
      ],
      "requiredScopes": [
        "crm.objects.contacts.read",
        "crm.objects.contacts.write",
        "files",
        "crm.objects.companies.read",
        "crm.objects.companies.write",
        "crm.schemas.companies.read",
        "crm.schemas.companies.write",
        "crm.schemas.contacts.read",
        "crm.schemas.contacts.write",
        "crm.objects.deals.read",
        "crm.objects.deals.write",
        "crm.schemas.deals.read",
        "crm.schemas.deals.write"
      ],
      "optionalScopes": [],
      "conditionallyRequiredScopes": []
    },
    "permittedUrls": {
      "fetch": [
        "https://api.hubapi.com"
      ],
      "iframe": [],
      "img": []
    },
    "support": {
      "supportEmail": "usman@purelyworks.com",
      "documentationUrl": "https://purelyworks.com/docs",
      "supportUrl": "https://purelyworks.com/support"
    }
  }
}
